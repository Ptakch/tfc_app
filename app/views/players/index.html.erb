<h1>Player List</h1>
<a href="players/new" class="btn btn-success">CREATE NEW PLAYER</a>



<table class="table table-striped">
	<tr>
		<th class="info">Name</th>
		<th class="info">Team</th>
		<th class="info">Steam Id</th>
	</tr>
	<% @players.each do |player| %>
	<tr>
		<td><%= link_to player.name, player_path(player) %></td>
		<td><%= player.team.name if player.team %></td> 
		<td><%= player.steam_id %></td>
		<td><%= link_to 'Show', player_path(player) %></td>
		<td><%= link_to 'Edit', edit_player_path(player) %></td>
		<td><%= link_to 'destroy', player_path(player), method: :delete, data: { confirm: "are you sure?"} %></td>
	</tr>
	<%end%>
</table>




