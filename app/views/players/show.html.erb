<h1>Player (Show)</h1>

<p>
	<strong>Name:</strong>
	<%= @player.name %>
</p>

<% if @player.team %>
	<p>
		<strong>Team:</strong>
		<%= link_to @player.team.name, "/teams/#{@player.team.id}" %>
	</p>
<% end %>

<p>
	<strong>Steam Id:</strong>
	<%= @player.steam_id %>
</p>

